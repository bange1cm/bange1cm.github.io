---
import Image from "astro/components/Image.astro";

// About section component
---

<section id="about" class="about">
	<div class="about-container">
		<div class="about-content">
			<h2>About Me</h2>
			<p>
				I'm a UX researcher and designer with a foundation in full-stack and front-end development, seeking to apply research driven 
                design and technical skills to build intuitive user experiences.
			</p>
			<p>
				When I'm not designing or coding, you can find me enjoying the outdoors, enjoying creative hobbies, playing board games,
				or learning new technologies.
			</p>
		</div>
		<div class="about-image">
			<img src="../../corayerke.jpeg" alt="Headshot of Cora Yerke" class="image-placeholder" />
		</div>
	</div>
</section>

<style>
	.about {
		padding: 80px 20px;
		background-color: #f9fafb;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.about-container {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: center;
	}

	.about-content h2 {
		font-size: 2.2em;
		margin: 0 0 20px 0;
		color: #1f2937;
	}

	.about-content p {
		font-size: 1.05em;
		line-height: 1.8;
		color: #4b5563;
		margin: 0 0 20px 0;
	}

	.about-image {
		text-align: center;
	}

	.image-placeholder {
		width: 250px;
		height: 312.5px;
		margin: 0 auto 15px;
		border-radius: 12px;
		background: white;
		border: 2px solid #e5e7eb;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
	}

	.image-placeholder svg {
		width: 100%;
		height: 100%;
	}

	.image-caption {
		color: #9ca3af;
		margin: 0;
		font-size: 0.9em;
	}

	@media (max-width: 768px) {
		.about-container {
			grid-template-columns: 1fr;
			gap: 30px;
		}

		.about-content h2 {
			font-size: 1.8em;
		}

		.image-placeholder {
			width: 200px;
			height: 200px;
		}
	}
</style>
