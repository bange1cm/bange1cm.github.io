---
// Contact preview/footer section component for home page
---

<section class="contact-preview">
	<div class="contact-preview-container">
		<h2>Let's Connect</h2>
		
		<div class="quick-contact">
			<div class="contact-info">
				<a href="mailto:bangecor0@gmail.com" class="contact-link">
					<span class="label">Email</span>
					<span class="value">bangecor0@gmail.com</span>
				</a>
			</div>
			<div class="contact-info">
				<a href="https://www.linkedin.com/in/cora-yerke" target="_blank" class="contact-link">
					<span class="label">LinkedIn</span>
					<span class="value">linkedin.com/in/cora-yerke</span>
				</a>
			</div>
			<div class="contact-info">
				<a href="https://github.com/bange1cm" target="_blank" class="contact-link">
					<span class="label">GitHub</span>
					<span class="value">https://github.com/bange1cm</span>
				</a>
			</div>
		</div>

		<a href="/contact" class="button-primary cta-button">View Full Contact Info</a>
	</div>
</section>

<style>
	.contact-preview {
		padding: 80px 20px;
		background-color: var(--color-lightest);
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		text-align: center;
	}

	.contact-preview-container {
		max-width: 900px;
		margin: 0 auto;
	}

	.contact-preview h2 {
		font-size: 2.2em;
		margin: 0 0 10px 0;
		color: #1f2937;
	}

	.contact-preview > div > p {
		font-size: 1.1em;
		color: var(--color-light);
		margin: 0 0 40px 0;
	}

	.quick-contact {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 20px;
		margin-bottom: 40px;
	}

	.contact-info {
		background: white;
		padding: 20px;
		border-radius: 8px;
		border: 1px solid #e5e7eb;
	}

	.contact-link {
		display: flex;
		flex-direction: column;
		text-decoration: none;
		color: inherit;
		transition: all 0.2s;
	}

	.contact-link:hover {
		color: var(--color-primary);
	}

	.contact-link .label {
		font-size: 0.9em;
		color: var(--color-primary);
		font-weight: 600;
		margin-bottom: 5px;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.contact-link .value {
		font-size: 1em;
		color: #1f2937;
		word-break: break-word;
	}

	.contact-link:hover .value {
		color: var(--color-secondary);
	}

	.cta-button {
		display: inline-block;
		padding: 14px 32px;
	}


	@media (max-width: 768px) {
		.contact-preview {
			padding: 60px 20px;
		}

		.contact-preview h2 {
			font-size: 1.8em;
		}

		.quick-contact {
			grid-template-columns: 1fr;
		}
	}
</style>
