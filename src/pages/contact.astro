---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout>
	<Navigation />
	<div class="contact-page-container">
		<section id="contact" class="contact">
			<div class="contact-container">
				<h1>Get In Touch</h1>
				<p class="contact-intro">I'd love to hear from you. Feel free to reach out!</p>
				
				<div class="contact-content">
					<div class="contact-methods">
						<div class="contact-item">
							<h3>Email</h3>
							<a href="mailto:your.email@example.com">your.email@example.com</a>
						</div>
						<div class="contact-item">
							<h3>LinkedIn</h3>
							<a href="https://linkedin.com/in/yourprofile" target="_blank">linkedin.com/in/yourprofile</a>
						</div>
						<div class="contact-item">
							<h3>GitHub</h3>
							<a href="https://github.com/yourprofile" target="_blank">github.com/yourprofile</a>
						</div>
						<div class="contact-item">
							<h3>Phone</h3>
							<a href="tel:+1234567890">+1 (234) 567-890</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</Layout>

<style>
	.contact-page-container {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		min-height: calc(100vh - 70px);
		display: flex;
		align-items: center;
		color: white;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.contact {
		width: 100%;
		padding: 80px 20px;
	}

	.contact-container {
		max-width: 900px;
		margin: 0 auto;
		text-align: center;
	}

	.contact-container h1 {
		font-size: 2.5em;
		margin: 0 0 15px 0;
	}

	.contact-intro {
		font-size: 1.1em;
		opacity: 0.95;
		margin: 0 0 40px 0;
	}

	.contact-content {
		display: flex;
		justify-content: center;
	}

	.contact-methods {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 30px;
		width: 100%;
	}

	.contact-item {
		background: rgba(255, 255, 255, 0.1);
		padding: 20px;
		border-radius: 8px;
		backdrop-filter: blur(10px);
	}

	.contact-item h3 {
		margin: 0 0 10px 0;
		font-size: 1.1em;
	}

	.contact-item a {
		color: white;
		text-decoration: none;
		transition: opacity 0.2s;
		word-break: break-word;
	}

	.contact-item a:hover {
		opacity: 0.8;
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		.contact {
			padding: 60px 20px;
		}

		.contact-container h1 {
			font-size: 1.8em;
		}

		.contact-methods {
			grid-template-columns: 1fr;
		}
	}
</style>
